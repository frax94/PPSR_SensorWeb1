<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
	prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="presentation.view.AdminStageController">
	<left>
		<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="170.0"
			spacing="30.0" style="-fx-border-color: lightgray; -fx-border-width: 0 2 0 0;"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="homeButton" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Elenco Impianti"
					textAlignment="CENTER" />
				<Separator prefWidth="200.0" />
				<Button fx:id="nuovoClienteButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Nuovo Cliente"
					textAlignment="CENTER" />
				<!-- aggiunta -->
				<Button fx:id="listaClienteButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Lista Cliente"
					textAlignment="CENTER" />
				<Button fx:id="eliminaClienteButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Elimina Cliente"
					textAlignment="CENTER" />
				<Separator prefWidth="200.0" />
				<!-- fine aggiunta -->
				<Button fx:id="nuovoImpiantoButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Nuovo Impianto"
					textAlignment="CENTER" />
				<Button fx:id="eliminaImpiantoButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Elimina Impianto"
					textAlignment="CENTER" />
				<Button fx:id="modificaImpiantoButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="120.0" text="Modifica Impianto"
					textAlignment="CENTER" />
				<Separator prefWidth="200.0" />
				<Button fx:id="aggiornaDBButt" mnemonicParsing="false"
					prefHeight="45.0" prefWidth="125.0" text="Aggiorna Sensori"
					textAlignment="CENTER" />
			</children>
			<padding>
				<Insets bottom="35.0" top="35.0" />
			</padding>
		</VBox>
	</left>
	<center>
		<AnchorPane fx:id="content" prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER" />
	</center>
</BorderPane>
